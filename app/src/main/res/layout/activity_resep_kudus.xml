<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ResepKrawu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Resep Soto Kudus"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Bahan bahan : "
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n 1 ekor ayam, belah dua
\n 1500 ml air
\n 3 siung bawang putih, iris halus
\n 3 cm jahe, memarkan
\n 2 btg serai, ambil bagian putihnya dan memarkan
\n 3 sdm minyak goreng

" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Bumbu Halus :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n 5 buah bawang merah
\n 1 sdt ketumbar utuh
\n Â½ sdt merica utuh
\n 2 cm kunyit
\n Garam

" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Pelengkap :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n 3 sdm bawang goreng
\n 50 gr tauge
\n 1 btg seledri, iris halus
\n 1 bh jeruk nipis, iris 4
\n 3 sdm kecap manis

" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Langkah-langkah :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n1.	Tumis bawang putih hingga harum, masukkan bumbu halus, jahe, dan serai, aduk hingga masak.
\n2.	Masukkan ayam dan aduk terus hingga ayam berubah warna.
\n3.	Tuang air. Masak hingga ayam matang dengan api sedang.
\n4.	Angkat ayam dari panci dan goreng hingga kering.
\n5.	Cabik-cabik ayam dan atur di mangkok bersama pelengkap lainnya.
\n6.	Siram kuah di atasnya dan sajikan

" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="121dp" />


    </LinearLayout>
</ScrollView>