<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ResepKrawu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Resep Nasi Grombyang"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Bahan bahan : "
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n500 gr daging sapi, rebus ½ empuk sisihkan kaldunya 1000ml
\n1 batang serai
\n2 cm lengkuas, memarkan
\n2 lembar daun salam
\n2 lembar daun jeruk
\n2 sdm gula merah
\n1/2 sdm tauco manis
\n2 sdm kelapa sangrai
" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Bumbu Halus :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n6 siung bawang merah
\n3 siung bawang putih
\n3 butir kemiri
\n1/2 sdt merica butiran
\n1/4 sdt pala bubuk
\n2 butir keluwak
\n1 cm jahe
\n2 cm kunyit
" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan Pelengkap :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSecukupnya bawang goreng
\nSecukupnya daun bawang iris halus
\nSecukupnya sambal rawit
" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Langkah-langkah :"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n1.	Tumis bumbu halus hingga harum dan benar² matang masukkan serai, daun salam, lengkuas dan daun jeruk.
\n2.	Tambahkan air kaldu masukkan daging masak sampai mendidih.
\n3.	Masukkan tauco, kelapa sangrai, garam, gula merah dan bubuk kaldu. Masak hingga bumbu meresap dan daging empuk. Koreksi rasa sampai pas gurih manisnya sesuai selera.
\n4.	Siapkan nasi hangat tuang soto diatasnya. Beri taburan bawang goreng dan daun bawang.
" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="121dp" />


    </LinearLayout>
</ScrollView>